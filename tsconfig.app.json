{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@*": ["./src/*"]
    },
  }
}
